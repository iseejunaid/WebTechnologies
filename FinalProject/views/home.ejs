<%- include('./partials/header') %>
<html>
<title>Discover Pakistan</title>
  <body class="body">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
                <img id="logoimg" src="images/logo.png" alt="Discover Pakistan's logo">
                Discover Pakistan
            </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/destinations">Destinations</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Hotels</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Transport</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Packages</a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="#">1 Person</a></li>
                  <li><a class="dropdown-item" href="#">2 Person</a></li>
                  <li><a class="dropdown-item" href="#">5 Person</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#">Group Tour</a></li>
                </ul>
              </li>
            </ul>
            <form class="d-flex">
              <a class="btn btn-outline-success" href="/responses">Custom Tour</a>
                <button class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#ModalForm">Login</button>
                <a class="btn btn-outline-success" href="/signup">Sign Up</a>
              </form>
          </div>
        </div>
      </nav>
      <div class="container-xxl">
        <div class="container">
          <div class="row align-items-start">
            <div class="col">
              <h1>Lets travel.</h1>
              <p>Pakistan: where nature meets tradition<p>
            </div>
            <div class="col">
              <div id="destinationdiv">
                <h3>Enter Destination</h3>
                <input type="text" id="input" name="input">
                <button type="button" class="btn btn-success">Search</button>
                </div>
              </div> 
            </div>
          </div>
        </div>
        <div class="modal fade" id="ModalForm" tabindex="-1" aria-labelledby="ModalFormLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-body">
                  <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                  <div class="myform bg-dark">
                      <h1 class="text-center">Login Form</h1>
                      <form>
                          <div class="mb-3 mt-4">
                              <label for="exampleInputEmail1" class="form-label">Email address</label>
                              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                          </div>
                          <div class="mb-3">
                              <label for="exampleInputPassword1" class="form-label">Password</label>
                              <input type="password" class="form-control" id="exampleInputPassword1">
                          </div>
                          <button type="submit" class="btn btn-light mt-3">LOGIN</button>
                          <p>Not a member? <a href="/signup">Signup now</a></p>
                      </form>
                  </div>
              </div>
            </div>
          </div>
      </div>
      <div class="container-xxl" id="container3">
        <div class="img-container">
          <div class="card">
            <img class="card-img-top" src="images/lahore.jpg" alt="lahore pic">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-center">Lahore</h5>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="images/peshawar.jpg" alt="peshawar pic">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-center">Peshawar</h5>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="images/islamabad.jpg" alt="islamabad pic">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-center">islamabad</h5>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="images/mohenjo.jpg" alt="mohenjo daro pic">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-center">Mohenjo-Daro</h5>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="images/murree.jpg" alt="murree pic">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-center">Murree</h5>
            </div>
          </div>
          <div class="card">
            <img class="card-img-top" src="images/hubdam.jpg" alt="hubdam pic">
            <div class="card-img-overlay d-flex align-items-center justify-content-center">
              <h5 class="card-title text-center">Hub Dam</h5>
            </div>
          </div>
        </div>
      </div>
      <div class="button-container">
        <a class="all-destinations" href='/destinations'>All Destinations</a>
      </div>           
      <%- include('./partials/footer') %>   
  </body>
</html>